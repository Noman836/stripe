<div class="row">
    <div class="col-lg-8 mt-5">
        <div class="card shadow mb-3">
            <div class="card-body">
                <h4 class="card-title"><%= @workshop.name %></h4>
                <div class="row mt-3">
                    <div class="col-lg-7">
                    <h4><span class="badge bg-primary"><%= @workshop.total_duration %></span></h4>
                    <h4><span class="badge bg-primary"><%= @workshop.daily_duartion %></span></h4>
                    </div>
                    <div class="col-lg-5">
                        <h4>Total Site: <span class="badge bg-primary"><%= @workshop.total_site %></span></h4>
                        <h4>Remaining Site: <span class="badge bg-primary"><%= @workshop.remaining_site %></span></h4>
                        <h4>Registration Fee: <span class="badge bg-primary"><%= @workshop.registration_fee %></span></h4>
                    </div>
                </div>
                <p class="lead mt-3 mb-3"><%= @workshop.description%></p>
                <%= link_to 'Back to Workshop', workshops_path, class: 'btn btn-outline-danger btn-lg mt-3' %>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mt-5">
        <div class="card shadow mb-3">
            <div class="card-body">
                <h4 class="card-title text-center text-danger fs-3 fw-bolder">Reserve your Seats</h4>
                <%= form_with url: "#", data: {turbo: false} do |form| %>
                <%= form.hidden_field :workshop_id, value: @workshop.id %>
                <div class="form-group">
                    <%= form.label :full_name, class:" form-text mb-2 mt-2" %>
                    <%= form.text_field :full_name, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= form.label :email, class:" form-text mb-2 mt-2" %>
                    <%= form.text_field :email, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= form.label :contact_number, class:" form-text mb-2 mt-2" %>
                    <%= form.text_field :contact_number, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= form.label :no_of_sites_you_want_to_book, class:" form-text mb-2 mt-2" %>
                    <%= form.number_field :no_of_tickets, class: 'form-control', required: true, min: 1, max: @workshop.remaining_site %>
                </div>
                <h4 class="mt-4 mb-3 text-center">Card Details</h4>
                <hr>
                <div class="form-group">
                    <%= form.label :card_number, class:" form-text mb-2 mt-2" %>
                    <%= form.text_field :card_number, class: 'form-control', required: true, min: 1, max: @workshop.remaining_site %>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                        <%= form.label :cvv, class:" form-text mb-2 mt-2" %>
                        <%= form.text_field :cvv, class: 'form-control', required: true, maxlength: 4 %>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                        <%= form.label :exp_month, class:" form-text mb-2 mt-2" %>
                        <%= form.text_field :exp_month, class: 'form-control', min: 1, max: 12 %>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                        <%= form.label :year, class:" form-text mb-2 mt-2" %>
                        <%= form.text_field :exp_year, class: 'form-control', required: true, min:2023, max:2026 %>
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <%= form.submit "Book your Seat Now", class: 'btn btn-outline-danger mt-4'%>
                    </div>
                </div>
                <% end %>
            </div>    
        </div>       
    </div>
</div>