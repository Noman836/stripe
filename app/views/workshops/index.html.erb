<div class="col-lg-12">
    <h1 class="mt-5 mb-5">Available Workshops</h1>
    <div class="row">
        <% @workshops.each do |workshop|%>
        <div class="col-lg-6">
            <div class="card shadow mb-3 mt-2">
                <div class="card-body">
                    <h4 class="card-title"><%= workshop.name %></h4>
                    <p class="lead"><%= truncate(workshop.description, length: 50) %></p>
                    <h4><span class="badge bg-primary">From <%= workshop.total_duration %></span></h4>
                    <h4><span class="badge bg-primary">From <%= workshop.daily_duartion%></span></h4>
                    <%= link_to 'View Details', workshop, class: 'btn btn-danger btn-lg'%>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>